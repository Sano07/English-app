<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectDictionaryActivity">

    <TextView
        android:id="@+id/tvQuestionSettings"
        android:layout_width="305dp"
        android:layout_height="101dp"
        android:background="@drawable/shape_select_lvl_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginStart="50dp"
        android:text="Select theme"
        android:textAllCaps="true"
        android:textSize="38sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        tools:ignore="HardcodedText">
    </TextView>

    <LinearLayout
        android:id="@+id/layoutLvlVariants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings">


        <LinearLayout
            android:id="@+id/layoutThemes1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTheme1"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                android:text="Travel"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

            <TextView
                android:id="@+id/tvTheme2"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="Food &amp; Drinks"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutThemes2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTheme3"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="Clothes &amp; Appearance"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

            <TextView
                android:id="@+id/tvTheme4"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="Jobs &amp; Work"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutThemes3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTheme5"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="Home &amp; Daily Life"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

            <TextView
                android:id="@+id/tvTheme6"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="Health &amp; Body"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutThemes4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTheme7"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="Sports"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

            <TextView
                android:id="@+id/tvTheme8"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="Weather &amp; Nature"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutThemes5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTheme9"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="Feelings &amp; Emotions"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

            <TextView
                android:id="@+id/tvTheme10"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/shape_rounded_select_lvl_variants"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestionSettings"
                android:text="City &amp; Transport"
                android:textColor="@color/black"
                android:textSize="20sp"
                style="@style/TextViewVariantsStyle"
                android:gravity="center"
                tools:ignore="HardcodedText">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:backgroundTint="#2574FF"
        android:text="@string/button_confirm"
        android:textAllCaps="true"
        android:layout_marginBottom="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>